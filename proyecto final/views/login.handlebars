{{#if message}}
    <div class="success" style="padding-top: 50px;padding-bottom: 284px;">{{message}}</div>
{{else}}
{{error}}
<div id="login" class="animate form" style="text-align:center;padding-bottom: 128px;">
	<form  action="/login" method="post"> 
		<h1>Log in</h1> 
    	<p> 
			<label for="username" class="uname" data-icon="u" > Nombre de usuario </label>
		    <input id="username" name="username" required="required" type="text"/>
		</p>
		<p> 
			<label for="password" class="youpasswd" data-icon="p"> Contraseña </label>
			<input id="password" name="password" required="required" type="password"/> 
		</p>
		<p class="keeplogin"> 
			<input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" /> 
			<label for="loginkeeping">Mantenerme logeado</label>
		</p>
		<p class="login button"> 
				<input type="submit" value="Login" /> 
		</p>
		<p class="change_link">
			¿Todavia no estás registrado?
			<a href="/registro" class="to_register" style="text-decoration:none">Registrate</a>
		</p>
	</form>
</div>
{{/if}}